<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smltech.uiux.androiduireference">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".ui.Activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.Activity.MainMenu.RecyclerViewActivity" />
        <activity
            android:name=".ui.Activity.MainMenu.MaterialTabsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.Activity.RecyclerViewMenu.RecyclerViewSubMenu" />
        <activity android:name=".ui.Activity.MainMenu.MaterialDialogActivity" />
        <activity android:name=".ui.Activity.MainMenu.ToolbarActivity" />
        <activity android:name=".ui.Activity.MainMenu.FabMenu" />
        <activity android:name=".ui.Activity.MainMenu.FloatingActionButtonActivity"></activity>
    </application>

</manifest>