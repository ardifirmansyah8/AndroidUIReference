<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/swipe"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Swipleable (Vertical)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swip"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Button Under Swipeable Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_above="@+id/swip"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Swipe On Long Press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipe"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Swipeable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipeable"
        android:layout_above="@+id/swipe"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Swipleable With Viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swiip"
        android:layout_below="@+id/swip"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Swipleable (Legacy)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swiipp"
        android:layout_below="@+id/swiip"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>